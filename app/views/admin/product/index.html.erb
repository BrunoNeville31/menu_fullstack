
<%= link_to "Novo", new_admin_product_path %>
<table>
  <tr>
    <th>ID</th>
    <th>NAME</th>
    <th>CATEGORY</th>
    <th>SUBCATEGORY</th>
    <th>DESCRIPTION</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.category.name %></td>
      <td><%= product.sub_category %></td>
      <td><%= product.description %></td>
      <td><%= link_to "EDITAR", edit_admin_product_path(product) %></td>
    </tr>
  <% end %>
</table>